generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url  = env("DATABASE_URL")
}

model BadBots {
  guildId    String  @id  @map("_id")
  bots  String[] // Array of strings
}
model ConfigGuild  {
  guildId    String  @id  @map("_id")
  config Int  @default(0)// Bits xd 
}

model Antilink {
  guildId String  @id  @map("_id")
  MembersExceptions String[] 
  RolesExceptions String[] 
}

model messageCrossPost {
  guildId        String   @id @map("_id")
  channelId   String
}